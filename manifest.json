{
  "manifest_version": 3,
  "name": "Fiverr Keyword Insight AI",
  "version": "2.0.0",
  "description": "Advanced Fiverr keyword research tool with real-time data, competition analysis, and AI-powered insights for finding profitable gig opportunities",
  
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting",
    "alarms",
    "notifications"
  ],
  
  "host_permissions": [
    "https://*.fiverr.com/*",
    "https://api.fiverr.com/*"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Fiverr Keyword Insight AI"
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://*.fiverr.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["chart.min.js", "styles.css", "icons/*"],
      "matches": ["https://*.fiverr.com/*"]
    }
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://www.fiverr.com https://api.fiverr.com"
  }
}